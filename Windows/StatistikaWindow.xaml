<Window x:Class="Sprava_financi.StatistikaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sprava_financi"
        mc:Ignorable="d" 
        Title="Statistika" Height="700" Width="1200" Background="LightBlue"
        WindowStartupLocation="CenterScreen" Icon="Statistika.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Canvas Name="OvladaciPrvkyCanvas" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Width="280" Height="480"/>
        <Canvas Name="GrafCanvas" Grid.Column="0" Grid.Row="0" Margin="5,5,5,5" Width="880" Height="480"/>
        <Canvas Name="InfoCanvas" Grid.ColumnSpan="2" Grid.Row="1" Margin="5,5,5,5" Width="1170" Height="150"/>

    </Grid>
</Window>
